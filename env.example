# ==========================================
# AUTOMATION HUB - Environment Configuration
# ==========================================
# Copy this file to .env and update the values

# ==========================================
# General Settings
# ==========================================
NODE_ENV=development

# ==========================================
# Database Configuration (PostgreSQL)
# ==========================================
POSTGRES_USER=automation
POSTGRES_PASSWORD=automation_secret
POSTGRES_DB=automation_hub
POSTGRES_PORT=5432
# Full connection URL (used by backend)
DATABASE_URL=postgresql://automation:automation_secret@localhost:5432/automation_hub

# ==========================================
# Redis Configuration
# ==========================================
REDIS_PASSWORD=redis_secret
REDIS_PORT=6379
REDIS_URL=redis://:redis_secret@localhost:6379

# ==========================================
# API Server Configuration
# ==========================================
API_PORT=4000

# JWT Authentication
# IMPORTANT: Generate a strong secret for production!
# Use: openssl rand -base64 64
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d

# CORS Origins (comma-separated for multiple origins)
CORS_ORIGINS=http://localhost:3000

# ==========================================
# Frontend Configuration
# ==========================================
WEB_PORT=3000
NEXT_PUBLIC_API_URL=http://localhost:4000
NEXT_PUBLIC_WS_URL=ws://localhost:4000

# NextAuth Configuration
NEXTAUTH_URL=http://localhost:3000
# IMPORTANT: Generate a strong secret for production!
# Use: openssl rand -base64 32
NEXTAUTH_SECRET=your-nextauth-secret-change-in-production

# ==========================================
# Storage Configuration
# ==========================================
# Options: 'local' or 's3'
STORAGE_TYPE=local
LOCAL_STORAGE_PATH=./storage

# S3 Configuration (only needed if STORAGE_TYPE=s3)
S3_BUCKET=automation-hub-storage
S3_REGION=us-east-1
S3_ACCESS_KEY=your-s3-access-key
S3_SECRET_KEY=your-s3-secret-key
# Optional: Custom endpoint for S3-compatible storage (MinIO, DigitalOcean Spaces, etc.)
S3_ENDPOINT=

# ==========================================
# AI/Embedding Configuration
# ==========================================
# Embedding Provider Options: 'openai', 'anthropic', 'local'
EMBEDDING_PROVIDER=openai
EMBEDDING_MODEL=text-embedding-3-small
EMBEDDING_DIMENSIONS=1536

# LLM Provider Options: 'openai', 'anthropic'
LLM_PROVIDER=openai
LLM_MODEL=gpt-4o-mini

# OpenAI API Key (required if using OpenAI)
OPENAI_API_KEY=key

# Anthropic API Key (required if using Anthropic)
ANTHROPIC_API_KEY=key

# ==========================================
# n8n Integration (Optional)
# ==========================================
# Base URL of your n8n instance
N8N_BASE_URL=http://localhost:5678
# API Key for n8n (generate in n8n settings)
N8N_API_KEY=key

# ==========================================
# Security Configuration
# ==========================================
# Encryption key for secrets (exactly 32 characters)
# IMPORTANT: Generate a strong key for production!
# Use: openssl rand -hex 16
ENCRYPTION_KEY=key

# Rate limiting (requests per minute)
RATE_LIMIT_LOGIN=10
RATE_LIMIT_WEBHOOK=100

# ==========================================
# Development Settings
# ==========================================
# Enable debug logging
DEBUG=false
# Disable SSL certificate verification (dev only!)
NODE_TLS_REJECT_UNAUTHORIZED=1

